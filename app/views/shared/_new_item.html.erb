<div class="row">
  <div class="large-6 large-centered columns">

    <div>
      <%= simple_form_for [@location, @item] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.hidden_field :latitude, readonly: true %>
        <%= f.hidden_field :longitude, readonly: true %>

        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
